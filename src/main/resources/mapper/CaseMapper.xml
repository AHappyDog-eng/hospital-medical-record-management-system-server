<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.managementsystem.mapper.CaseMapper">
    <!--      public String id;
      public String name;
      // 主键
      public String idNumber;
      public String sex;
      public String age;
      public String visitingDoctor;
      public String medicalHistory;
      public String symptom;
      public String diagnosisResult;
      public String dateOfVisit;
      public String treatmentSuggestion;
      public String addressOfVisit;-->
    <select id="select" parameterType="Integer" resultType="com.hospital.managementsystem.domin.po.CasePo">
        SELECT * FROM caselistsec WHERE id = #{id}
    </select>

    <insert id="add" parameterType="com.hospital.managementsystem.domin.po.CasePo">
    insert into caselistsec (name,idNumber,sex,age,visitingDoctor,medicalHistory,symptom,diagnosisResult,dateOfVisit,treatmentSuggestion,addressOfVisit)
        values (#{name},#{idNumber},#{sex},#{age},#{visitingDoctor},#{medicalHistory},#{symptom},#{diagnosisResult},#{dateOfVisit},#{treatmentSuggestion},#{addressOfVisit})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
    delete from caselistsec where id = #{id}
    </delete>

    <update id="update" parameterType="com.hospital.managementsystem.domin.po.CasePo">
    update caselistsec set name=#{name},sex=#{sex},age=#{age},visitingDoctor=#{visitingDoctor},medicalHistory=#{medicalHistory},symptom=#{symptom},diagnosisResult=#{diagnosisResult},dateOfVisit=#{dateOfVisit},treatmentSuggestion=#{treatmentSuggestion},addressOfVisit=#{addressOfVisit} where id = #{id}
    </update>
    <select id="listById" parameterType="String" resultType="com.hospital.managementsystem.domin.po.CasePo">
        SELECT * FROM caselistsec WHERE idNumber=#{idNumber}
    </select>

    <select id="list" resultType="com.hospital.managementsystem.domin.po.CasePo">
        select * from caselistsec
    </select>
    <delete id="deleteList" parameterType="java.util.List">
        delete from caselistsec where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>